{
  "name": "agent-ready-typescript-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint-staged": "lint-staged",
    "structure:check": "node scripts/check-structure.mjs",
    "opencode:append-thread": "bun run scripts/append-opencode-thread.ts",
    "check": "bun run structure:check && bun run format:check && bun run lint && bun run typecheck && bun run test",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged && bun run typecheck"
  },
  "dependencies": {
    "@ag-ui/core": "^0.0.45",
    "@ag-ui/encoder": "^0.0.45",
    "@ai-sdk/anthropic": "^3.0.44",
    "ai": "^6.0.86",
    "googleapis": "^171.4.0",
    "zod": "^4.3.6"
  }
}
